# Configuración del Bot Gastos WhatsApp
# Copia este archivo a .env y modifica los valores según tus necesidades

# =============================================================================
# CONFIGURACIÓN DE ALMACENAMIENTO
# =============================================================================

# Modo de almacenamiento: 'excel' o 'sqlite'
STORAGE_MODE=excel

# Ruta archivo Excel (si STORAGE_MODE=excel)
EXCEL_FILE_PATH=data/gastos.xlsx

# Ruta archivo SQLite (si STORAGE_MODE=sqlite)
SQLITE_FILE_PATH=data/gastos.db

# Habilitar backup automático de base de datos
DB_BACKUP_ENABLED=true

# Habilitar backup automático de Excel
EXCEL_AUTO_BACKUP=true

# =============================================================================
# CONFIGURACIÓN WHATSAPP
# =============================================================================

# Intervalo entre verificaciones de mensajes (segundos)
WHATSAPP_POLL_INTERVAL=30

# Timeout para conexión WhatsApp Web (segundos)
WHATSAPP_TIMEOUT=10

# Nombre del chat a monitorear (debe coincidir exactamente)
TARGET_CHAT_NAME=Gastos Personal

# Ejecutar Chrome en modo headless (sin ventana visible)
# true = invisible, false = ventana visible
CHROME_HEADLESS=false

# =============================================================================
# CONFIGURACIÓN DE CATEGORÍAS
# =============================================================================

# Categorías válidas (separadas por comas)
VALID_CATEGORIES=comida,transporte,entretenimiento,salud,servicios,ropa,educacion,hogar,trabajo,otros,super,nafta

# Permitir crear nuevas categorías automáticamente
ALLOW_NEW_CATEGORIES=true

# Validación estricta de categorías (solo permitir las predefinidas)
STRICT_CATEGORY_VALIDATION=false

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Archivo donde guardar logs
LOG_FILE_PATH=logs/bot.log

# Mostrar logs en consola también
LOG_CONSOLE=true

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================

# Modo debug (más logs y información de diagnóstico)
DEBUG_MODE=false

# =============================================================================
# NOTAS DE USO
# =============================================================================

# 1. Asegúrate de que los directorios 'data' y 'logs' existan
# 2. El chat de WhatsApp debe coincidir exactamente con TARGET_CHAT_NAME
# 3. Para usar en modo headless, cambia CHROME_HEADLESS=true
# 4. Si tienes problemas, activa DEBUG_MODE=true para más información
# 5. Las categorías deben estar en minúsculas y sin espacios